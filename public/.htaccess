
#-- auth --#
#AuthType Basic
#AuthName "Password Protected Area"
#AuthUserFile /var/www/designengine.ai/.htpasswd
#Require valid-user

#-- drop www prefix --#
RewriteEngine on
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^(.*)$ http://%1/$1 [R=301,L]


#-- service paths --#
RewriteEngine on
    RewriteCond %{REQUEST_FILENAME} !-d
    #RewriteRule ^verify-email/(.*)/?$ https://api.pairurl.com/v4/pairurl.php?/$1 [R=301,L,NE]
    #RewriteRule ^verify-email/(\d+)/([0-9a-f]+)/?$ /php/verify-email.php?action=VERIFY_EMAIL&user_id=$1&token=$2 [P]
    #RewriteRule ^verify-email/(\d+)/([0-9a-f]+)/?$ /php/rewrite-worker.php?action=VERIFY_EMAIL&user_id=$1&token=$2 [P]
    #RewriteRule ^verify-email/(\d+)/?$ /php/rewrite-worker.php?action=VERIFY_EMAIL&user_id=$1 [P]
    RewriteRule ^verify-email/(\d+)/(.+)/?$ /php/rewrite-worker.php?action=VERIFY_EMAIL&user_id=$1&email=$2 [P]

