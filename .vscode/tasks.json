
// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
	"version": "2.0.0",
    "command": "npm",
    "promptOnClose": false,
	"echoCommand": false,
	"tasks": [
        {
            "label": "yarn start:debug",
            "type": "process",
            "command": "/usr/local/bin/yarn",
            "args": [
                "start:debug"
            ],
            "problemMatcher": [
                {
                    "pattern": {
                        "regexp": ""
                    },
                    "background": {
                        "beginsPattern": ".*node .*",
                        "endsPattern": "Web UI available at .*"
                    }
                }
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "yarn",
            "task": "start:debug",
            "problemMatcher": [],
            "group": "build",
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "label": "yarn: start:debug"
        },
        {
            "type": "yarn",
            "task": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "promptOnClose": false,
            "problemMatcher": [],
            "label": "yarn: build"
        },
        {
            "label": "yarn branch:daily",
            "type": "process",
            "command": "/usr/local/bin/yarn",
            "args": [
                "branch",
                "daily"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}