{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Firefox on localhost",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}",
      "keepProfileChanges": true,
      "pathMappings": [
        {
          "url": "file:///Volumes/Labor/projects/sites/pairurl.com/src",
          "path": "${workspaceFolder}/src"
        }
      ],
      "profileDir": "${workspaceFolder}/etc/profiles/firefox-debug",
      "skipFiles": [
        "/**/node_modules/**/*.js"
      ],
      "suggestPathMappingWizard": true
    },
    {
      "type": "firefox",
      "request": "attach",
      "name": "Attach to Firefox",
      "reloadOnAttach": true,
      "profileDir": "${workspaceFolder}/etc/profiles/firefox-debug",
      "pathMappings": [
        {
          "url": "file:///Volumes/Labor/projects/sites/pairurl.com/src",
          "path": "${workspaceFolder}/src"
        }
      ]
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/team/#login",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "skipFiles": [
        "/**/node_modules/**/*.js"
      ]
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "urlFilter": "http://localhost:3000/team/*",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*",
        "/Volumes/Labor/projects/sites/pairurl.com/*": "${workspaceRoot}/*"
      },
      "trace": true,
      "sourceMaps": true
    }
  ]
}
