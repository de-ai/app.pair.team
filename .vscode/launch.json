  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Firefox",
      "url": "http://localhost:3000/app/pairurl-com/pair-url/209/desktop-macos",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "url": "http://localhost:3000/app/pairurl-com/pair-url/209/desktop-macos",
      "webRoot": "${workspaceFolder}",
      "trace": true
    },

    {
      "type": "chrome",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Chrome @ localhost",
      "url": "http://localhost:3000/app/pairurl-com/pair-url/209/desktop-macos",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "file:///labor/projects/sites/pairurl.com/src",
          "path": "${workspaceFolder}/src"
        }
      ]
    }
  ]
}